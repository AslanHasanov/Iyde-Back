@using IydeParfume.Areas.Client.ViewModels.Basket;
@model List<BasketCookieViewModel>

<div class="col-lg-5">
    <div class="right-card">
        <div class="card-parent">
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-image">
                        <img src="~/@item.ImageUrl" alt="order img">
                    </div>
                    <div class="order-detail">
                        <h6>@item.Title</h6>
                        <div class="card-raiting">
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                        </div>
                        <div class="order-detail-button">
                            <div class="left">
                                <div class="quantity">
                                    <span class="quantity-picker">
                                        <button class="quantity-modifier modifier-left">
                                            <a asp-route="client-individual-basket-delete" asp-route-id="@item.Id"
                                           data-id="@item.Id" class="btn btn-dark minus-btn">
                                                -
                                            </a>
                                        </button>
                                        <input class="quantity-display" type="text" value="@item.Quantity" style="width: 1.6rem;">
                                        <button class="quantity-modifier modifier-right">
                                            <a asp-route="client-cardpagebasket-add" asp-route-id="@item.Id"
                                           data-id="@item.Id" class="btn btn-dark plus-btn">
                                                +
                                            </a>
                                        </button>
                                    </span>
                                </div>
                                <span class="resp-none">@item.Size ml</span>
                            </div>
                            <div class="right">
                                <p>
                                    @item.Price
                                    <i class="fa-solid fa-manat-sign"></i>
                                </p>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="deleteCart" asp-route="client-shop-basket-delete" asp-route-productId="@item.Id" data-id="@item.Id">
                        <i class="fa-solid fa-xmark"></i>
                        Sil
                    </button>
                </div>

            }
        </div>
        <div class="card-total">
            <div class="total-left">
                <p>
                    Ümumi:
                    <span>
                        $@Model!.Sum(pcvm => pcvm.Total) <i class="fa-solid fa-manat-sign"></i>
                    </span>
                </p>
                <p>
                    Çatdırılma:
                    <span>
                        0 <i class="fa-solid fa-manat-sign"></i>
                    </span>
                </p>
            </div>
            <div class="total-right">
                <p>
                    YEKUN:
                    <span>
                        $@Model!.Sum(pcvm => pcvm.Total) <i class="fa-solid fa-manat-sign"></i>
                    </span>
                </p>
            </div>
        </div>
        <div class="order-complete">
            <a href="/">Alışverişə qayıt</a>
            <button class="greenButton resp-none">Sİfarİşİ tamamla</button>
        </div>
    </div>
</div>
