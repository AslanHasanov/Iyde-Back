@using IydeParfume.Database.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Navbar>




<div class="headerBottom">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <ul class="navbar">
                    <li class="menu-item">
                        @foreach (var navItem in Model)
                        {
                            <li class="menu-item">
                                <a asp-route="@navItem.URL">@navItem.Name</a>
                                <ul id="drop-menu">
                                        @foreach (var subNav in navItem.SubNavbars)
                                        {
                                        <li><a asp-route="@subNav.URL">@subNav.Name</a></li>
                                        }
                                </ul>
                            </li>
                        }
                   </li>
                    <li class="menu-item">
                        <a asp-route="client-blog-index">Blog <i class="fa-solid fa-angle-down"></i></a>
                        <ul id="drop-menu">
                            <li><a asp-route="client-contact-index">Bizimlə Əlaqə</a></li>
                            <li><a asp-route="client-supportOrder-index">Sifariş Etmək</a></li>
                            <li><a asp-route="client-supportDelivery-index">Çatdırılma</a></li>
                            <li><a asp-route="client-supportPayment-index">Ödəniş</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>