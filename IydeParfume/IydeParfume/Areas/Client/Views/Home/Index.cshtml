@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using IydeParfume.Areas.Client.ViewComponents;
@using IydeParfume.Areas.Client.ViewModels.Home
@model IndexViewModel


<!-- Slider -->
<div class="Slider">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">

        <div class="carousel-inner">
            @foreach (var slider in Model.Sliders)
            {

                <div class="carousel-item active">
                    <img src="~/@slider.BackGroundImageUrl">
                </div>
            }

        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<!-- Slider End-->
<!-- ContentCategory -->
<div class="contentCategory">
    <div class="container second">
        <div class="row">
            <div class="col-lg-5 fir">
                <div class="left">
                    <h1>İYDƏ PERFUMERY</h1>
                    <p>2017-ci ildən fəaliyyət göstərən “İydə Parfumery" şirkəti artıq 5 ildən çoxdur ki, brendləri dünyaca məşhur olan ətirləri satışı ilə məşğuldur. Şirkətimiz 150-dən çox brend və 1000-dən çox ətir çeşidi ilə, ön pillələrdə yer alır. Bu illər ərzində artıq 18 mağazamız fəaliyyət göstərir.</p>
                    <div class="more-category"><a href="/about">Ətraflı</a></div>
                </div>
            </div>
            <div class="col-lg-7 sec">
                <img src="~/Client/assets/images/80_Untitled-3_1.png" alt="">
            </div>
        </div>
    </div>
</div>
<!-- ContentCategory End-->
